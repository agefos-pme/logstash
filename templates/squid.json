{
  "template" : "logstash-*",
  "settings" : {
    "index.refresh_interval" : "5s"
  },
  "mappings" : {
    "_default_" : {
      "_all" : {"enabled" : true, "omit_norms" : true},
      "dynamic_templates" : [ {
        "message_field" : {
          "match" : "message",
          "match_mapping_type" : "string",
          "mapping" : {
            "type" : "string", "index" : "analyzed", "omit_norms" : true,
            "fielddata" : { "format" : "disabled" }
          }
        }
      }, {
        "string_fields" : {
          "match" : "*",
          "match_mapping_type" : "string",
          "mapping" : {
            "type" : "string", "index" : "analyzed", "omit_norms" : true,
            "fielddata" : { "format" : "disabled" },
            "fields" : {
              "raw" : {"type": "string", "index" : "not_analyzed", "ignore_above" : 256}
            }
          }
        }
      } ],
      "properties" : {
        "@timestamp": { "type" : "date" },
        "@version": { "type" : "string", "index" : "not_analyzed" },
        "squid_timestamp" : { "type" : "date", "format": "dd/MM/YYYY HH:mm:ss|| d/MM/YYYY HH:mm:ss" },
        "squid_request_port" : { "type" : "integer", "omit_norms" : true },
        "squid_cache_value" : { "type" : "integer", "include_in_all" : false, "index" : "no" },
         "squid_http_status_code" : { "type" : "integer", "omit_norms" : true },
         "squid_bit_transaction" : { "type" : "long", "omit_norms" : true, },
         "squid_http_version" : { "type" : "float", "include_in_all" : false, "index" : "no" },
         "squid_request_param" : { "type" : "string", "include_in_all" : false, "index" : "no" },
         "squid_request_url_resolved" : { "type" : "ip" },
         "squid_ip_client" : { "type" : "ip" },
        "geoip"  : {
          "dynamic": true,
          "properties" : {
            "ip": { "type": "ip" },
            "location" : { "type" : "geo_point" },
            "latitude" : { "type" : "float" },
            "longitude" : { "type" : "float" }
          }
        }
      }
    }
  }
}
